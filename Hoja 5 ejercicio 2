#include <iostream>
#include <conio.h>
using namespace std;
int main()
{
	int mes;
	cout << endl;
	cout << "mes 1-12" << endl;
	cin >> mes;
	if (mes == 2)
	{
		cout << "El mes tiene 28 dias";
	}
	else if ((mes == 4) || (mes == 6) || (mes == 9) || (mes == 11))
	{
		cout << "El mes tiene 30 dias";
	}
	else if ((mes == 1) || (mes == 3) || (mes == 5) || (mes == 7) || (mes == 8) || (mes == 10) || (mes == 12))
	{
		cout << "El mes tiene 31 dias";
	}
	else
	{
		system("color c");
		cout << "ERROR       el mes no exite" << endl;
	}
	_getch();
}
